
		<div class="md-modal {{effect}}">
			<div class="md-content">
				{{#if modalTitle}}
					<div cpn-divide="bottom" cpn-margin="bottom-double" cpn-clearfix>
						{{!-- <button cpn-margin="left" class="md-close svg-modal-close float--right" {{action "close"}}>Close me!</button> --}}
						<a {{action "close"}} cpn-frame_close cpn-float="right" class="svg-close-drawer"></a>
						<h2 cpn-frame_heading>{{modalTitle}}</h2>
					</div>
				{{else}}
					<button class="md-close svg-modal-close float--right" {{action "close"}}>Close me!</button>
				{{/if}}
				{{#if modalIntro}}
					<p>{{modalIntro}}</p>
				{{/if}}
				{{yield}}
			</div>
		</div>

		<div class="md-overlay {{unless appController.canvasBlurred '-hidden'}}" {{action "close"}}></div>