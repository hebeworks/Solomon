{{#if session.isAuthenticated}}

  <div class="session__avatar">

    <img src="{{currentUser.picture}}">

  </div>

  <p class="session__status">You are signed in as <i>{{currentUser.email}}</i>.</p>

  {{#if currentUser.isAdmin}}

    <p class="session__status--admin">You are using an <i>administrator</i> account. This means you may have access to additional functionality within this application.</p>

  {{/if}}

  {{#if currentUser.profileContent}}
    <div>
      {{currentUser.profileContent}}
    </div>
  {{/if}}

  <button cpn-button="move" cpn-margin="top bottom" {{action 'logout'}}>Logout</button>

{{else}}

  <div id="session__embed"></div>

{{/if}}
