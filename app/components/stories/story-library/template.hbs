	<div class="drawer__header">
		<div cpn-divide="bottom" cpn-clearfix>
			<a {{action "closeBottomDrawer"}} cpn-frame_close cpn-float="right" class="svg-close-drawer"></a>
			<h2 cpn-frame_heading>Add a Story</h2>
		</div>

		<div cpn-divide="bottom">
			<ul cpn-row-list spc-story-drawer-buttons>
				<li>
					<button cpn-button {{action "switchView" 'categories' }} data-btn-type="categories">Categories</button>
				</li>
				<li>
					<button cpn-button {{action "switchView" 'featured' }} data-btn-type="featured">Featured</button>
				</li>
				<li>
					<button cpn-button {{action "switchView" 'search' }} data-btn-type="search">Search</button>
				</li>
				{{!-- <button class="btn -toggle" {{action "switchView" 'official' }} data-btn-type="official">Official</button>--}}
				{{#if currentUser.isAdmin}}
					<li spc-story-drawer-create>
						<button cpn-button="move" {{action "changeBottomDrawerContent" "stories/create-a-story"}}>Create a story</button>
					</li>
				{{/if}}
			</ul>
		</div>

