{{#stories/story-base}}
  {{#if loading}}
    <p>Loading data...</p>
  {{else}}
    {{#unless feedURL}}
      <div cpn-padding="right left" cpn-margin="top-double">
        <button cpn-button="action" cpn-margin="top" {{action "editAStory" storyModel}}>Add a feed</button>
      </div>
    {{else}}
      <main cpn-story-body="scrollV height2">
        <ul class="margin-left-no">
          {{#each items as |item|}}
            <li cpn-snippet>
              <a href="{{item.link}}" cpn-snippet_inner target="_blank">
                <img cpn-snippet_img src="{{item.image}}" alt="">
                <p cpn-snippet_title>{{item.title}}</p>
              </a>
            </li>
          {{/each}}
        </ul>
      </main>
    {{/unless}}
  {{/if}}
{{/stories/story-base}}
