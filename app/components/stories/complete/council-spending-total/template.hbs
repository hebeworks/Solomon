
{{#stories/story-base 
    title=title 
    subTitle=subTitle 
    color="black" 
    width="2" 
    height="2" 
    data-ss-colspan="2"
    headerBorder=true

    dataSourceUrl=""
    feedbackEmail="simon@hebeworks.com"
    description=""
    license="Open Government License"
    author="Simon Zimmerman"
}}
    <div cpn-clearfix cpn-margin="bottom-double">
        
        <div cpn-width="100%" cpn-margin="bottom-none" class="select2-wrapper -select2-calendar">
            {{
                select-2
                content=months
                value=selectedMonth
                placeholder="Date"
            }}
        </div>
    </div>
    
    <ul cpn-table="fixed" cpn-text="center">
        <li cpn-table-cell="middle">
            <div cpn-fill-circle="lime on-dark">
                <div cpn-fill-circle_ring>
                    <div cpn-fill-circle_back>
                        <div cpn-fill-circle_back-data>
                            <span cpn-fill-circle_data-value>&pound;{{number-thousand-format selectedMonth.total true}}</span>
                        </div>
                    </div>
                    <div cpn-fill-circle_front style="margin-top: {{totalPercentageRemaining}}%;">
                        <div cpn-fill-circle_front-inner style="top: -{{totalPercentageRemaining}}%;">
                            <div cpn-fill-circle_front-data>
                            <span cpn-fill-circle_data-value>&pound;{{number-thousand-format selectedMonth.total true}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </li>
        <li cpn-table_cell="middle">
            <p spc-cs-spend-desc>Monthly spend by Leeds City Council compared with annual budget in</p>
            <h2 spc-cs-spend-title>{{selectedMonth.text}}</h2>
        </li>
    </ul>
{{/stories/story-base}}
