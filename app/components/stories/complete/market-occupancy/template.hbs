{{#stories/story-base}}

    {{#stories/story-slider loaded=loaded}}
    
        {{!-- Number of occupied stalls --}}
        {{#stories/story-slide}}
            {{!-- Month Picker --}}
            <div class="select2-wrapper -select2-calendar">
                {{
                    select-2
                    content=months
                    value=selectedMonth
                    placeholder="Choose a month"
                }}
            </div>
            
            <div cpn-google-chart id="chart-no-occupied-stalls"></div>
        {{/stories/story-slide}}
        
        {{!-- % of empty stalls --}}
        {{#stories/story-slide}}
            {{!-- Month Picker --}}
