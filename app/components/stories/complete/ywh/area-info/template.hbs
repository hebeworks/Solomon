{{#stories/story-base}}

    <div cpn-divide="bottom solid light">
        <h2 spc-yw-ai_title>{{zoneTitle}}</h2>
    </div>
    
    {{!-- <p cpn-font="swiss-bold-rounded" spc-yw-ai_period>{{datePeriod}}</p>--}}
    
    <span spc-yw-ai_waves class="svg-yorkshire-water-waves" data-grunticon-embed></span>
    
    <div cpn-row-list="">
		<div cpn-width="100%">
			<label for="" cpn-font="swiss-bold-rounded" cpn-display="block">Water System</label>
			{{ select-2
				content=ywFilter.zones
				value=ywFilter.selectedZone
				placeholder="Choose a water system"
				class="margin-bottom-no"
			}}
		</div>
		{{#if ywFilter.selectedZone}}
			<div cpn-width="100%">
				<label for="" cpn-font="swiss-bold-rounded" cpn-display="block">Production Management Zone</label>
				{{ select-2
					content=ywFilter.subZones
					value=ywFilter.selectedSubZone
					placeholder="Choose a production management zone"
					class="margin-bottom-no"
				}}
			</div>
		{{/if}}
		<div cpn-width="100%">
			<label for="" cpn-font="swiss-bold-rounded" cpn-display="block">DMA</label>
			{{ select-2
				content=ywFilter.dmas
				value=ywFilter.selectedDMA
				placeholder="Or choose a DMA"
				class="margin-bottom-no"
			}}
		</div>
		<div cpn-width="50%">
			<label cpn-font="swiss-bold-rounded" for="" cpn-display="block">Start Date</label>
			{{pikaday-input value=ywFilter.startDate format="DD/MM/YYYY"}}
		</div>
		<div cpn-width="50%">
			<label cpn-font="swiss-bold-rounded" for="" cpn-display="block">End Date</label>
			{{pikaday-input value=ywFilter.endDate format="DD/MM/YYYY"}}
		</div>
		<div cpn-width="100%">
			<label for="" cpn-font="swiss-bold-rounded" cpn-display="block">Previous Searches</label>
			{{ select-2
				content=ywFilter.history
				value=ywFilter.selectedHistory
				optionLabelPath="title"
				placeholder="Filter history"
				class="margin-bottom-no"
			}}
		</div>
    </div>
    
{{/stories/story-base}}
