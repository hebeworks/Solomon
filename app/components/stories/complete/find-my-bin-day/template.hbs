
{{#stories/story-base title="Find My Bin Day" subTitle="Find your next Leeds bin day" color="white" width="2" height="2" data-ss-colspan="2"}}
    <main spc-fmbd-body>
        {{#unless currentAddress}}
            <div spc-fmbd-logo>
                <div spc-fmbd-logo_inner>
                    <h2 spc-fmbd-logo_title>Find my bin day</h2>
                    {{!-- <p spc-fmbd-logo_desc>Looking for a grit bin?</p> --}}
                </div>
            </div>
        
            <div cpn-margin="bottom-double">
                {{
                    select-2
                    
                    content=addresses
                    optionLabelPath="shortAddress"
                    value=selectedAddress
                    
                    placeholder="Search for a place"
                    typeaheadSearchingText="Searching places"
                    typeaheadNoMatchesText="No places found for '%@'"
                    typeaheadErrorText="Loading failed: %@"
                    minimumInputLength=3
                    query="findPlaces"
                }}
            </div>
            
            <h3 cpn-text="center" spc-fmbd-tct-logo>
                <a href="http://www.thecitytalking.com/" target="_blank">The City Talking</a>
            </h3>
        {{else}}
        
            <div spc-fmbd-address>
                <h3 spc-fmbd-address_location>{{currentAddress.streetAddress}}</h3>
                <a spc-fmbd-address_change {{action 'changeAddress'}}>Change Address</a>
            </div>
            
            <ul spc-fmbd-results>
                {{#each orderedDates as |date index|}}
                    {{stories/complete/find-my-bin-day/bin-date date=date currentAddress=currentAddress showCalendarButton=showCalendarButton}}
                {{/each}}
            </ul>
        {{/unless}}
    </main>
{{/stories/story-base}}
