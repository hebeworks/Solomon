{{#stories/story-base 
    title=title 
    subTitle=subTitle 
    color="black" 
    width="2" 
    height="2" 
    data-ss-colspan="2"
    
    dataSourceUrl="http://leedsdatamill.org/dataset/leeds-city-centre-footfall-data"
    feedbackEmail="simon@hebeworks.com"
    description="This Story uses City Centre Footfall data from Leeds Data Mill"
    license="<a href='http://leedsdatamill.org/dataset/leeds-city-centre-footfall-data' target='_blank'>Leeds City Centre Footfall Data</a>, Â© Leeds City Council, 2015.  This information is licensed under the terms of the Open Government Licence"
    author="Simon Zimmerman"
}}
<main class="footfall-centre">
    <div cpn-divide="bottom light" cpn-padding="bottom-none">
        <p cpn-margin="bottom-half" class="story__para">Figures for the week commencing {{item.weekStarts}} and ending {{item.weekEnds}}.</p>
    </div>

    <div class="circle-indicator -large">
        <div class="svg-circle-indicator -green" data-grunticon-embed></div>
        <div class="circle-indicator-ring -large">
            <div>
                <i class="svg-calendar" data-grunticon-embed>Calendar icon</i>
                <h2 class="gamma">Week {{item.week}}</h2>
                <h3 class="beta">Footfall Total</h3>
                <h4 class="beta">{{number-thousand-format item.weekTotal}}</h4>
            </div>
        </div>
    </div>
    <aside class="circle-indicator-stats">
        <div cpn-clearfix cpn-divide="bottom light" cpn-padding="bottom-none" cpn-margin="bottom-half">
            <div class="circle-indicator-stat">
                <p cpn-margin="bottom-half" class="circle-indicator-stat__text">Previous week<br /><span class="circle-indicator-stat__stat {{item.previousWeekComparisonIndicator}}">{{item.previousWeekComparison}}%</span> <i class="svg-up-down-arrow {{item.previousWeekComparisonArrow}}" data-grunticon-embed>Up or Down arrow icon</i></p>
            </div>
        </div>
        <div cpn-clearfix cpn-divide="bottom light" cpn-padding="bottom-none" cpn-margin="bottom-half">
            <div class="circle-indicator-stat">
                <p cpn-margin="bottom-half" class="circle-indicator-stat__text">Same week in 2014<br /><span class="circle-indicator-stat__stat {{item.sameWeekPreviousYearComparisonIndicator}}">{{item.sameWeekPreviousYearComparison}}%</span> <i class="svg-up-down-arrow {{item.sameWeekPreviousYearComparisonArrow}}" data-grunticon-embed>Up or Down arrow icon</i></p>
            </div>
        </div>
        <div cpn-clearfix cpn-divide="bottom light" cpn-padding="bottom-none" cpn-margin="bottom-half">
            <div class="circle-indicator-stat">
                <p cpn-margin="bottom-half" class="circle-indicator-stat__text">Same week in 2013<br /><span class="circle-indicator-stat__stat {{item.sameWeekPreviousYear2ComparisonIndicator}}">{{item.sameWeekPreviousYear2Comparison}}%</span> <i class="svg-up-down-arrow {{item.sameWeekPreviousYear2ComparisonArrow}}" data-grunticon-embed>Up or Down arrow icon</i></p>
            </div>
        </div>    
        <div cpn-clearfix class="circle-indicator-stat">
            <p cpn-margin="bottom-none" class="circle-indicator-stat__text">2015 Weekly Average<br /><span class="circle-indicator-stat__stat {{item.weeklyAverageComparisonIndicator}}">{{item.weeklyAverageComparison}}%</span> <i class="svg-up-down-arrow {{item.weeklyAverageComparisonArrow}}" data-grunticon-embed>Up or Down arrow icon</i></p>
        </div>
    </aside>

