{{#stories/story-base
    title=''
    subTitle=''
    color=color
    width="1"
    height="1"
    data-ss-colspan="1"
    viewOnly=true
}}
    <div spc-val cpn-padding="top">
        <div cpn-divide="bottom {{tileShade}}" cpn-margin="bottom-half">
            <p cpn-margin="bottom-none" spc-val_value>{{storyModel.value}}</p>
        </div>
        <div cpn-divide="bottom {{tileShade}}" cpn-margin="bottom-half">
            <p cpn-margin="bottom-half" spc-val_desc>
                <span>{{storyModel.description}}</span>
                <span>{{storyModel.description2}}</span>
            </p>
        </div>
        <p spc-val_instruction cpn-margin="bottom-none">Tap to view</p>
    </div>
{{/stories/story-base}}
