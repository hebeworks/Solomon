{{#stories/story-base 
    title=title 
    subTitle=subTitle 
    color="light-blue" 
    width="2" 
    height="2" 
    data-ss-colspan="2"

    dataSourceUrl="http://leedsdatamill.org/dataset/live-car-park-spaces-api"
    feedbackEmail="info@leedsdatamill.org"
    description="This Story used data from Leeds City Council's Live Car Park Spaces API"
    license="<a href='http://leedsdatamill.org/dataset/live-car-park-spaces-api' target='_blank'>Live car park spaces api</a>, Â© Leeds City Council, 2015. This information is licensed under the terms of the Open Government Licence"

    author="Nathan Smith"
}}
<main class="carpark-spaces">
    <div>
        {{
            select-2
            content=items
            value=selectedCarPark
            optionValuePath="id"
            optionLabelPath="title"
            placeholder="Choose a Car Park"
        }}

        <!--optionDescriptionPath="title"-->
        <!--optionLabelPath="title"-->
    </div>

    {{#if selectedCarPark}}
        <div class="car-park">
            <i class="svg-parking-icon">Parking Icon</i>
            <h2 class="heading alpha">
                {{currentCarPark.title}}
            </h2>
            <div class="car-park__wrapper">
                <div class="car-park__section">
                    <div class="-value">{{currentCarPark.available}}</div>
                    <div class="-label">Spaces available</div>
                </div>
                <div class="car-park__section">
                    <div class="-value">{{currentCarPark.occupiedSpaces}}</div>
                    <div class="-label">Occupied spaces</div>
                </div>
                <div class="car-park__section">
                    <div class="-value">{{currentCarPark.totalCapacity}}</div>
                    <div class="-label">Park Capacity</div>
                </div>
            </div>
        </div>
        {{google-map 
            lat=lat 
            lng=lng 
            zoom=zoom
            markers=markers
            gopt_styles=mapStyles
            gopt_zoomControl=false
            gopt_mapTypeControl=false
            }}
    {{else}}
        {{loading-icon}}
    {{/if}}
</main>
{{/stories/story-base}}
