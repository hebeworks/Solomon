<section cpn-bid-edit-section>
    <h3 cpn-bid-edit-section_header="{{sectionOpenState}}" {{action "toggleSection"}}>Occupants</h3>
    <main cpn-bid-edit-section_body="{{sectionOpenState}}">
        
        {{#if multipleOccupants}}
            {{
                select-2
                content=occupants
                value=chosenOccupant
                placeholder="Occupant"
                optionLabelPath="property"
            }}
        {{/if}}
        
        {{#if chosenOccupant}}
            {{#if chosenOccupant.0.occupantID}}
            <p>{{chosenOccupant.0.occupantID}}</p>
            {{/if}}
            
            {{#if chosenOccupant.0.archived}}
            <p>{{chosenOccupant.0.archived}}</p>
            {{/if}}
            
            {{#if chosenOccupant.0.organisation}}
            <p>{{chosenOccupant.0.organisation}}</p>
            {{/if}}
            
            {{#if chosenOccupant.0.property}}
            <p>{{chosenOccupant.0.property}}</p>
            {{/if}}
            
            {{#if chosenOccupant.0.joiningDate}}
            <p>{{chosenOccupant.0.joiningDate}}</p>
            {{/if}}
            
            {{#if chosenOccupant.0.tags}}
            <p>{{chosenOccupant.0.tags}}</p>
            {{/if}}
            
            {{#if chosenOccupant.0.sector}}
            <p>{{chosenOccupant.0.sector}}</p>
            {{/if}}
            
            {{#if chosenOccupant.0.businessType}}
            <p>{{chosenOccupant.0.businessType}}</p>
            {{/if}}
            
            {{#if chosenOccupant.0.voter}}
            <p>{{chosenOccupant.0.voter}}</p>
            {{/if}}
            
            {{#if chosenOccupant.0.billPayer}}
            <p>{{chosenOccupant.0.billPayer}}</p>
            {{/if}}
            
            {{#if chosenOccupant.0.accountsDept}}
            <p>{{chosenOccupant.0.accountsDept}}</p>
            {{/if}}
            
            {{#if chosenOccupant.0.localContact}}
            <p>{{chosenOccupant.0.localContact}}</p>
            {{/if}}
            
            {{#if chosenOccupant.0.companyMember}}
            <p>{{chosenOccupant.0.companyMember}}</p>
            {{/if}}
        {{/if}}
        
        {{#if model.allPeople}}
            {{component "bid/person-edit" model=model.allPeople}}
        {{/if}}
    </main>
</section>