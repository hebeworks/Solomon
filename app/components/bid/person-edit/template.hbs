<section cpn-bid-edit-section cpn-padding="right-double left-double">
    {{#if nested}}
    <h3 cpn-bid-edit-section_header="{{sectionOpenState}}" {{action "toggleSection"}}>{{title}}</h3>
    <main cpn-bid-edit-section_body="{{sectionOpenState}}">
        {{#if multiplePeople}}
            {{
                select-2
                content=people
                value=chosenPerson
                placeholder="Person"
                optionLabelPath="name"
            }}
        {{/if}}
        
        {{#if chosenPerson}}
            {{#if chosenPerson.name}}
            <p>{{chosenPerson.name}}</p>
            {{/if}}
            
            {{#if chosenPerson.jobTitle}}
            <p>{{chosenPerson.jobTitle}}</p>
            {{/if}}
            
            {{#if chosenPerson.votingFor}}
            <p>{{chosenPerson.votingFor}}</p>
            {{/if}}
            
            <ul cpn-row-list>
                <li>
                    <button cpn-button="action" {{action "cancel"}}>Cancel</button>
                </li>
                <li>
                    <button cpn-button="action" {{action "save"}}>Save Person</button>
                </li>
            </ul>
        {{/if}}
    </main>
    {{else}}
    {{#if multiplePeople}}
        {{
            select-2
            content=people
            value=chosenPerson
            placeholder="Person"
            optionLabelPath="name"
        }}
    {{/if}}
    
    {{#if chosenPerson}}
        {{#if chosenPerson.name}}
        <p>{{chosenPerson.name}}</p>
        {{/if}}
        
        {{#if chosenPerson.jobTitle}}
        <p>{{chosenPerson.jobTitle}}</p>
        {{/if}}
        
        {{#if chosenPerson.votingFor}}
        <p>{{chosenPerson.votingFor}}</p>
        {{/if}}
        
        <ul cpn-row-list>
            <li>
                <button cpn-button="action" {{action "cancel"}}>Cancel</button>
            </li>
            <li>
                <button cpn-button="action" {{action "save"}}>Save Person</button>
            </li>
        </ul>
    {{/if}}
    {{/if}}
</section>